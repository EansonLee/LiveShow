<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="89dp"
        android:layout_marginBottom="69.5dp"
        android:text="@string/login_bg_text"
        android:textColor="#F97698"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center">


        <com.maywide.liveshow.widget.ClearEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/login_et_bg"
            android:hint="@string/login_hint_phone_text"
            android:inputType="number"
            android:paddingLeft="70dp"
            android:paddingRight="10dp"
            android:textColor="@color/font_black_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/font16" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="33dp"
            android:text="+86" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@+id/tv_num"
            android:src="@mipmap/drop_down_icon" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39.5dp"
        android:gravity="center">


        <EditText
            android:id="@+id/et_var"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/login_et_bg"
            android:hint="@string/login_hint_vercode_text"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/font_black_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/font16" />

        <!--<ImageView-->
        <!--android:layout_width="12dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_alignLeft="@+id/et_var"-->
        <!--android:layout_alignTop="@+id/et_var"-->
        <!--android:layout_alignBottom="@+id/et_var"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:src="@mipmap/ver_code_login" />-->

        <!--<TextView-->
        <!--android:id="@+id/tv_var"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="29dp"-->
        <!--android:layout_alignRight="@+id/et_var"-->
        <!--android:layout_alignTop="@+id/et_var"-->
